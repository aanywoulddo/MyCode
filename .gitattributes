*.txt text eol=lf

# Merge strategies for specific files
REPOSITORY_ANALYSIS_AND_SYNC_PLAN.md merge=union
README.md merge=union
.gitignore merge=union

# Python cache and virtual env
__pycache__/ export-ignore
*.pyc export-ignore
*.pyo export-ignore
*.pyd export-ignore
venv/ export-ignore
.venv/ export-ignore

# Node modules
node_modules/ export-ignore

# IDE files
.vscode/ export-ignore
.idea/ export-ignore
*.swp export-ignore
*.swo export-ignore
*~ export-ignore

# OS files
.DS_Store export-ignore
Thumbs.db export-ignore