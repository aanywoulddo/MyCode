{
  "manifest_version": 3,
  "name": "Google Gemini Toolbox",
  "version": "1.0",
  "description": "Organize your Gemini chats into collapsible folders and access a prompt library.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["prompt_library.js", "injector.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["prompt_library.html", "prompt_library.css", "prompt_library.js", "word_counter.js"],
      "matches": ["*://gemini.google.com/*"]
    }
  ]
} 