{
  "manifest_version": 3,
  "name": "Gemini Toolbox",
  "version": "1.2",
  "description": "Enhance Gemini with folders, prompt library, word counter, and voice mode.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["prompt_library.js", "word_counter.js", "voice_mode.js", "export_chat.js", "injector.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["prompt_library.html", "prompt_library.css", "prompt_library.js", "word_counter.js", "voice_mode.js", "export_chat.js", "export_chat.css"],
      "matches": ["*://gemini.google.com/*"]
    }
  ]
} 